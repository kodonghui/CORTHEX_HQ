# ============================================
# CORTHEX HQ - AI Agent Corporation 환경 설정
# ============================================
# 이 파일을 .env.local 로 복사한 뒤 API 키를 입력하세요.
# cp .env.example .env.local
# (.env 도 지원하지만, AnySign4PC 등이 .env를 잠글 수 있으므로 .env.local 권장)

# OpenAI API Key (GPT 모델 사용 시)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (Claude 모델 사용 시)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# 기본 모델 설정 (비용 최적화를 위해 에이전트별 다르게 설정 가능)
DEFAULT_MODEL=gpt-4o-mini
MANAGER_MODEL=gpt-4o
SPECIALIST_MODEL=gpt-4o-mini
WORKER_MODEL=gpt-4o-mini

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 보고서 GitHub 자동 업로드 (1=ON, 0=OFF)
CORTHEX_AUTO_UPLOAD=1

# ─── 카카오 API 설정 (다음 카페 검색) ───
# 카카오 개발자 센터 (https://developers.kakao.com) 에서 앱 등록
# 사용 API: 검색 > 카페
KAKAO_REST_API_KEY=your-kakao-rest-api-key

# ─── SNS 연동 설정 ───

# Tistory (Selenium 자동화, API 폐지됨)
TISTORY_BLOG_NAME=your-blog-name

# YouTube / Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/callback/youtube

# Instagram
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret
INSTAGRAM_REDIRECT_URI=http://localhost:8000/oauth/callback/instagram
INSTAGRAM_USER_ID=your-instagram-user-id

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/oauth/callback/linkedin
LINKEDIN_MEMBER_ID=your-linkedin-member-id

# ─── 네이버 블로그 (Selenium) ───
NAVER_ID=your-naver-id
NAVER_PW=your-naver-password
NAVER_BLOG_ID=your-naver-blog-id

# ─── 네이버 카페 (Official API) ───
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_REDIRECT_URI=http://localhost/callback
NAVER_CAFE_CLUB_ID=your-cafe-club-id
NAVER_CAFE_MENU_ID=your-cafe-menu-id

# ─── 카카오 계정 (Tistory + 다음카페 공용) ───
KAKAO_ID=your-kakao-email
KAKAO_PW=your-kakao-password

# ─── 다음 카페 전용 (계정이 다를 경우) ───
DAUM_KAKAO_ID=
DAUM_KAKAO_PW=

# ─── 다음 카페 설정 ───
DAUM_CAFE_ID=your-daum-cafe-id
DAUM_CAFE_BOARD_ID=your-daum-cafe-board-id

# ─── 텔레그램 봇 (CEO 모바일 지시) ───
# BotFather(@BotFather)에서 봇 생성 후 토큰 입력
TELEGRAM_ENABLED=0
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CEO_CHAT_ID=your-telegram-chat-id

# ─── Selenium 브라우저 설정 ───
SNS_BROWSER_HEADLESS=true
